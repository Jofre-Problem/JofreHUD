//Radar vmt by Village Green Preserver, https://github.com/VillageGreenPreserver/tf2-hud-radar
//modified from https://github.com/gliptal2/tf2-hud-radar

"Patch"
{
	include		"materials/vgui/replay/thumbnails/radar/radar_base.vmt"

	replace
	{
		"$basetexture"		"vgui/replay/thumbnails/radar/maps/pl_badwater"

		"$alignX"			"6500" //scale the image so the distances line up, the higher the value, the less the image moves
		"$alignY"			"6500" //seperate value for y axis, use the same value as x if the vtf is a square

		"$offsetX"			"-800" //offset the image, not needed if you take your screenshots at coordinates 0, 0
		"$offsetY"			"110"
			
		"$scale"			"[0.2 0.2]" //size of the radar image
		"$rotate"			"0" //rotate radar image

		"$layer1"			"150"
		"$layer2"			"250"
		"$layer3"			"9999"
		"$layer4"			"9999"
	}
}