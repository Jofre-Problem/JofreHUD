//Radar vmt by Village Green Preserver, https://github.com/VillageGreenPreserver/tf2-hud-radar
//modified from https://github.com/gliptal2/tf2-hud-radar

"Patch"
{
	include		"materials/vgui/replay/thumbnails/radar/radar_base.vmt"

	replace
	{
		"$basetexture"		"vgui/replay/thumbnails/radar/maps/pl_goldrush"

		"$alignX"			"6450" //scale the image so the distances line up, the higher the value, the less the image moves
		"$alignY"			"6450" //seperate value for y axis, use the same value as x if the vtf is a square

		"$offsetX"			"5410" //offset the image, not needed if you take your screenshots at coordinates 0, 0
		"$offsetY"			"-100"
			
		"$scale"			"[0.2 0.2]" //size of the radar image
		"$rotate"			"0" //rotate radar image

		"$layer1"			"30"
		"$layer2"			"160"
		"$layer3"			"290"
		"$layer4"			"9999"
	}
}